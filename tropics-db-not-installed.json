{
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort }}/oracle-5.8/ks.cfg<enter><wait>"
      ],
      "boot_wait": "10s",
      "disk_size": 40960,
      "guest_additions_path": "VBoxGuestAdditions_{{.Version}}.iso",
      "guest_os_type": "Oracle_64",
      "hard_drive_interface": "sata",
      "http_directory": "http",
      "iso_checksum": "1ec844c1090a417b741a9bf0d6dea240",
      "iso_checksum_type": "md5",
      "iso_url": "{{user `iso_directory`}}/OracleLinux-R5-U8-Server-x86_64-dvd.iso",
      "output_directory": "tropics-db-not-installed",
      "shutdown_command": "echo 'oracle'|sudo -S /sbin/halt -h -p",
      "ssh_password": "oracle",
      "ssh_port": 22,
      "ssh_username": "oracle",
      "ssh_wait_timeout": "10000s",
      "type": "virtualbox-iso",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "2048"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "1"
        ],
		[
          "modifyvm",
          "{{.Name}}",
          "--vram",
          "32"
        ]
      ],
      "virtualbox_version_file": ".vbox_version",
      "vm_name": "tropics-db"
    }
  ],
  "post-processors": [
    {
      "output": "builds/{{user `box_basename`}}.{{.Provider}}.box",
      "type": "vagrant"
    }
    ],
    "provisioners": [
    {
      "destination": "/tmp/bento-metadata.json",
      "source": "{{user `metadata`}}",
      "type": "file"
    },
    {
	  "environment_vars": [],
      "execute_command": "echo 'oracle' | {{.Vars}} sudo -S -E sh '{{.Path}}'",
      "scripts": [
        "scripts/common/metadata.sh",
        "scripts/common/vagrant.sh",
        "scripts/common/sshd.sh",
        "scripts/tropics-db/vmtools.sh",
		"scripts/tropics-db/oracle-install-prereqs.sh"
	  ],
      "type": "shell"
    },
	{
	  "environment_vars": [],
      "execute_command": "echo 'oracle' | {{.Vars}} sudo -S -E sh '{{.Path}}'",
      "scripts": [
    	"scripts/tropics-db/cleanup.sh",
        "scripts/common/minimize.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "arch": "64",
    "box_basename": "tropics-db-not-installed",
    "build_timestamp": "{{isotime \"20060102150405\"}}",
    "git_revision": "__unknown_git_revision__",
    "metadata": "floppy/dummy_metadata.json",
    "mirror": "http://mirrors.dotsrc.org/oracle-linux/EL5/U8/x86_64",
	"iso_directory": "iso",
	"software_directory": "software/oracle-db",
    "name": "tropics-db-not-installed",
    "template": "tropics-db-not-installed",
    "version": "2.0.TIMESTAMP"
  }
}